@model Curso

@{
    ViewData["Title"] = "Editar Curso";
    Layout = "_Simple";
}

<h1>@ViewData["Title"]</h1>
<div asp-validation-summary="All"></div>
    <Form method="POST">
        <div>
            <label asp-for="Nombre"></label>
            @Html.EditorFor(Curso => Curso.Nombre)
        </div>   
        <div>
            <label asp-for="Dirección"></label>
            @Html.EditorFor(Curso => Curso.Dirección)
        </div>    
        <div>
            <label asp-for="Jornada"></label>
            @Html.DropDownList("Jornada",Html.GetEnumSelectList<TiposJornada>(),"Seleccione una Jornada",
                new{@class = "form-control"})
        </div>   
        <input type="submit"/>
    </Form>
<p><i>@ViewBag.fecha</i></p>
